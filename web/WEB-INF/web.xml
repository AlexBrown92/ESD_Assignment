<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>db</param-name>
        <param-value>localhost:3306/esd_assignment</param-value>
    </context-param>
    <context-param>
        <param-name>dbUser</param-name>
        <param-value>app</param-value>
    </context-param>
    <context-param>
        <param-name>dbPassword</param-name>
        <param-value>app</param-value>
    </context-param>
    <listener>
        <description>ServletContextListener</description>
        <listener-class>Utils.Helper</listener-class>
    </listener>
    <servlet>
        <servlet-name>Controller</servlet-name>
        <servlet-class>Controller.Controller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Controller</servlet-name>
        <url-pattern>/jspf/*</url-pattern>
        <url-pattern>/login</url-pattern>
        <url-pattern>/logout</url-pattern>
        <url-pattern>/patientslist</url-pattern>
        <url-pattern>/patientview</url-pattern>
        <url-pattern>/patientremove</url-pattern>
        <url-pattern>/patientviewpaybill</url-pattern>
        <url-pattern>/billview</url-pattern>
        <url-pattern>/billviewpaybill</url-pattern>
        <url-pattern>/billviewaddmedicine</url-pattern> 
    </servlet-mapping>
    <session-config>
        <session-timeout>20</session-timeout>
    </session-config>
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/jspf/error404.jsp</location>
    </error-page>
    <error-page>
        <exception-type>generic error</exception-type>
        <location>/WEB-INF/jspf/errorgeneric.jspf</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/jspf/error404.jsp</location>
    </error-page>
</web-app>
